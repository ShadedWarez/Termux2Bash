#!/bin/sh

echo 'DISTRO_NAME="BackBox Linux"' >> $PREFIX/etc/proot-distro/backbox.sh
###
mkdir -p $PREFIX/var/lib/proot-distro/installed-rootfs
###
cd $PREFIX/var/lib/proot-distro/installed-rootfs
###
wget https://github.com/xiv3r/Kali-Linux-Nethunter/releases/download/rootfs/backbox-arm64-rootfs.tar.xz
###
tar -xvJf backbox-arm64-rootfs.tar.xz
###
echo "
To login BackBox: pd sh backbox
"
pd sh backbox
