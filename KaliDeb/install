#!/data/data/com.termux/files/usr/bin/bash -e

mkdir -p $PREFIX/var/lib/proot-distro/installed-rootfs
###
cd $PREFIX/var/lib/proot-distro/installed-rootfs
###
axel -a --search https://github.com/xiv3r/Termux-Pentesting-Distro/releases/download/rootfs/debkali.tar.xz
###
echo "
[*] Extracting rootfs...
"
###
proot --link2symlink bsdtar -xpJf debkali.tar.xz 2>/dev/null
###
cat >$PREFIX/etc/proot-distro/debkali.sh << EOF
DISTRO_NAME="Debian Nethunter"
EOF
###
echo "
clear
debkali
" >>$PREFIX/etc/bash.bashrc
###
echo "pd sh debkali" > $PREFIX/bin/debkali
###
chmod 700 $PREFIX/bin/debkali
###
echo "nameserver 9.9.9.9" > debkali/etc/resolv.conf
###
echo "
To login Kali in Debain: debkali
"
