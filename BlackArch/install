#!/bin/sh

echo 'DISTRO_NAME="BlackArch Linux"' >> $PREFIX/etc/proot-distro/blackarch.sh
###
echo "pd sh blackarch" > $PREFIX/bin/blackarch
###
chmod 700 $PREFIX/bin/blackarch
###
mkdir -p $PREFIX/var/lib/proot-distro/installed-rootfs
###
cd $PREFIX/var/lib/proot-distro/installed-rootfs
###
axel -a -n 1 https://github.com/xiv3r/Termux-Pentesting-Distro/releases/download/rootfs/blackarch.tar.xz
###
echo "
[*] Extracting rootfs...
"
###
bsdtar -xpJf blackarch.tar.xz >/dev/null 2>&1
###
echo "
[*] Done!
"
###
echo "
To login Blackarch type: blackarch
"
