#!/bin/sh

echo 'DISTRO_NAME="Kali Linux Full"' >> $PREFIX/etc/proot-distro/kali-full.sh
###
echo "pd sh kali-full" > $PREFIX/bin/kali
###
chmod 700 $PREFIX/bin/kali
###
mkdir -p $PREFIX/var/lib/proot-distro/installed-rootfs/kali-full
###
cd $PREFIX/var/lib/proot-distro/installed-rootfs
###
wget https://kali.download/nethunter-images/current/rootfs/kali-nethunter-rootfs-full-arm64.tar.xz
###
tar -xvJf kali-nethunter-rootfs-full-arm64.tar.xz
###
mv chroot/kali-arm64 $PREFIX/var/lib/proot-distro/installed-rootfs/kali-full
###
echo "
To login Kali Linux Nethunter full: kali-full
"
