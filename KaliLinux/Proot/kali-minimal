#!/bin/sh

echo 'DISTRO_NAME="Kali Nethunter Minimal"' > $PREFIX/etc/proot-distro/kali-minimal.sh
###
mkdir -p $PREFIX/var/lib/proot-distro/installed-rootfs/kali-minimal
###
echo "pd sh kali-minimal" > $PREFIX/bin/kali
###
chmod 700 $PREFIX/bin/kali
###
cd $PREFIX/var/lib/proot-distro/installed-rootfs
###
axel -a -n 1 -o kali-minimal.tar.xz https://kali.download/nethunter-images/current/rootfs/kali-nethunter-rootfs-minimal-arm64.tar.xz
###
echo "
[*] Extracting rootfs...
"
###
prrot --link2symlink bsdtar -xpJf kali-minimal.tar.xz 2>/dev/null
###
echo "
[*] Done!
"
###
mv chroot/kali-arm64/* $PREFIX/var/lib/proot-distro/installed-rootfs/kali-minimal
###
rm -rf chroot
###
wget -O kali-minimal/root/.zshrc https://raw.githubusercontent.com/xiv3r/Termux-Pentesting-Distro/refs/heads/main/KaliLinux/Proot/.zshrc
###
echo "nameserver 9.9.9.9" > kali-minimal/etc/resolv.conf
###
echo "
To login Kali type: kali
"
