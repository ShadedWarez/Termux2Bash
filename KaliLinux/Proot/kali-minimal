#!/data/data/com.termux/files/usr/bin/bash -e

mkdir -p $PREFIX/var/lib/proot-distro/installed-rootfs/kali-minimal
###
cd $PREFIX/var/lib/proot-distro/installed-rootfs
###
axel -a --search -o kali-minimal.tar.xz https://kali.download/nethunter-images/current/rootfs/kali-nethunter-rootfs-minimal-arm64.tar.xz
###
echo "
[*] Extracting rootfs...
"
###
proot --link2symlink bsdtar -xpJf kali-minimal.tar.xz 2>/dev/null
###
echo 'DISTRO_NAME="Kali Nethunter Minimal"' > $PREFIX/etc/proot-distro/kali-minimal.sh
###
echo "pd sh kali-minimal" > $PREFIX/bin/kali
###
chmod 700 $PREFIX/bin/kali
###
echo "kali" >>$PREFIX/etc/bash.bashrc
###
mv kali-arm64/* $PREFIX/var/lib/proot-distro/installed-rootfs/kali-minimal
###
rm -rf chroot
###
wget -O kali-minimal/root/.zshrc https://raw.githubusercontent.com/xiv3r/Termux-Pentesting-Distro/refs/heads/main/KaliLinux/Proot/.zshrc
###
echo "nameserver 9.9.9.9" > kali-minimal/etc/resolv.conf
###
git clone https://github.com/zsh-users/zsh-autosuggestions kali-minimal/root/.zsh/zsh-autosuggestions
###
echo "
To login Kali type: kali
"
